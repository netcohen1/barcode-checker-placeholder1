{
  "manifest_version": 3,
  "name": "Advanced Barcode Checker",
  "version": "1.0",
  "description": "Find similar products, locate items on Amazon, and verify barcodes using AI.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
